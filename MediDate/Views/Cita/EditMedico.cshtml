@model MediDate.Models.Cita

@{
    ViewData["Title"] = "Reagendar Cita";
}

@if (TempData["SuccessMessage"] != null)
{
    <!--Modal si la ejecución en la BD sale bien-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["SuccessMessage"]', 'success');
        }
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <!--Modal si ocurre una excepción-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["ErrorMessage"]', 'error');
        }
    </script>
}

@if (TempData["AlertMessage"] != null)
{
    <!--Modal si hay que mostrar información relevante al usuario-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["AlertMessage"]', 'info');
        }
    </script>
}

<partial name="_MenuMedicos" />

<div class="container">

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <h4>Reagendar Cita</h4>
        </div>
    </div>

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-7 align-self-center">
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditMedico">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <input asp-for="IdCita" class="form-control" type="hidden"/>
                                    <input asp-for="IdMedico" class="form-control" type="hidden" />
                                    <input asp-for="IdPaciente" class="form-control" type="hidden" />
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="NombrePaciente" class="control-label fw-bold">Paciente</label>
                                    <input asp-for="NombrePaciente" class="form-control" readonly/>
                                    <span asp-validation-for="NombrePaciente" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="Servicio" class="control-label fw-bold"></label>
                                    <input asp-for="Servicio" class="form-control" readonly/>
                                    <span asp-validation-for="Servicio" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label fw-bold"></label>
                                    <input asp-for="Fecha" class="form-control" type="date" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" required />
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="Hora" class="control-label fw-bold"></label>
                                    <input asp-for="Hora" class="form-control" type="time" min="@ViewBag.HoraInicio" max="@ViewBag.HoraFin" step="3600" required />
                                    <span asp-validation-for="Hora" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div><label></label></div>

                        <div class="row justify-content-between">
                            <div class="col-md-auto">
                                <a class="btn btn-secondary" asp-action="IndexMedico" asp-controller="Cita">Regresar</a>
                            </div>
                            <div class="col-md-auto">
                                <input type="submit" value="Reagendar" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

        </div> @*Fin Col de _MenuMedicos.cshtml*@
    </div> @* Fin Row de _MenuMedicos.cshtml*@
</div> @*Fin Container de _MenuMedicos.cshtml*@

