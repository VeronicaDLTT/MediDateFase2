@model MediDate.Models.Paciente

@{
    ViewData["Title"] = "Editar Cuenta";
}

@if (TempData["SuccessMessage"] != null)
{
    <!--Modal si la ejecución en la BD sale bien-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["SuccessMessage"]', 'success');
        }
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <!--Modal si ocurre una excepción-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["ErrorMessage"]', 'error');
        }
    </script>
}

@if (TempData["AlertMessage"] != null)
{
    <!--Modal si hay que mostrar información relevante al usuario-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["AlertMessage"]', 'info');
        }
    </script>
}

<partial name="_MenuPacientes" />

<div class="container">

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <h4>Editar Cuenta</h4>
        </div>
    </div>

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-7 align-self-center">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="control-label"><b>Nombre</b></label>
                                    <input asp-for="Nombre" class="form-control" required/>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="Apellido" class="control-label"><b>Apellido</b></label>
                                    <input asp-for="Apellido" class="form-control" required/>
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="FechaNacimiento" class="control-label"><b>Fecha de Nacimiento</b></label>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" format="dd/MM/yyyy"/>
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                                <div><label></label></div>
                                <div class="form-group">
                                    <label asp-for="Telefono" class="control-label"><b>Número de Celular</b></label>
                                    <input asp-for="Telefono" class="form-control" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div><label></label></div>

                        <div class="row d-flex justify-content-between">
                            <div class="col-md-auto">
                                <a class="btn btn-secondary" asp-controller="Paciente" asp-action="Details">Regresar</a>
                            </div>
                            <div class="col-md-auto">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

        </div> @*Fin Col de _MenuMedicos.cshtml*@
    </div> @* Fin Row de _MenuMedicos.cshtml*@
</div> @*Fin Container de _MenuMedicos.cshtml*@

