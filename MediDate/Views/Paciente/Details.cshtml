@model MediDate.Models.Paciente

@{
    ViewData["Title"] = "Configuración de la Cuenta";
}

@if (TempData["SuccessMessage"] != null)
{
    <!--Información actualizada exitosamente-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["SuccessMessage"]', 'success');
        }
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <!--No se pueden cargar Editar Cuenta-->
    <script>
        window.onload = function () {
            Swal.fire('Aviso', '@TempData["ErrorMessage"]', 'error');
        }
    </script>
}

<partial name="_MenuPacientes"/>

<div class="container">

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <h4>Configuración de la Cuenta</h4>
        </div>
    </div>

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <div class="card" style="width: 35rem;">
                <div class="card-body">
                    <div>
                        <dl class="row">
                            <dt class="col-sm-6">
                                @Html.DisplayName("Correo")
                            </dt>
                            <dd class = "col-sm-6">
                                <label>@ViewBag.Email</label>
                            </dd>
                            <dt class = "col-sm-6">
                                @Html.DisplayNameFor(model => model.Nombre)
                            </dt>
                            <dd class = "col-sm-6">
                                @Html.DisplayFor(model => model.Nombre)
                            </dd>
                            <dt class="col-sm-6">
                                @Html.DisplayNameFor(model => model.Apellido)
                            </dt>
                            <dd class="col-sm-6">
                                @Html.DisplayFor(model => model.Apellido)
                            </dd>
                            <dt class = "col-sm-6">
                                @Html.DisplayName("Fecha de Nacimiento")
                            </dt>
                            <dd class = "col-sm-6">
                                @{
                                    string fechaFormateada = Model.FechaNacimiento.HasValue
                                    ? Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                    : string.Empty;
                                }

                                @Html.DisplayFor(model => fechaFormateada)
                            </dd>
                            <dt class = "col-sm-6">
                                @Html.DisplayName("Número de Celular")
                            </dt>
                            <dd class = "col-sm-6">
                                @Html.DisplayFor(model => model.Telefono)
                            </dd>
                        </dl>
                    </div>
                    <div>
                        <div class="row d-flex justify-content-between">
                            <div class="col-md-auto">
                                <a class="btn btn-secondary" asp-controller="Paciente" asp-action="Index">Ir a Inicio</a>
                            </div>
                            <div class="col-md-auto">
                                <a class="btn btn-primary" asp-controller="Paciente" asp-action="Edit">Editar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
        </div> @*Fin Col de _MenuPacientes.cshtml*@
    </div> @* Fin Row de _MenuPacientes.cshtml*@
</div> @*Fin Container de _MenuPacientes.cshtml*@
