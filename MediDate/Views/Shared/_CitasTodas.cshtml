@model IEnumerable<MediDate.Models.Cita>

<div class="table-responsive">
    @if (Model.Count() > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hora)
                    </th>
                    <th>
                        @Html.DisplayName("Paciente")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicio)
                    </th>
                    <th>
                        @Html.DisplayName("Estado")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100px">
                            @{
                                string fechaFormateada = item.Fecha.ToString("dd/MM/yyyy");
                            }
                            @Html.DisplayFor(modelItem => fechaFormateada)
                        </td>
                        <td style="width:100px">
                            @{
                                string horaFormateada = item.Hora.ToString("hh:mm tt");
                            }
                            @Html.DisplayFor(modelItem => horaFormateada)
                        </td>
                        <td style="width:250px">
                            @Html.DisplayFor(modelItem => item.NombrePaciente)
                        </td>
                        <td style="width:200px">
                            @Html.DisplayFor(modelItem => item.Servicio)
                        </td>
                        <td style="width:250px">
                            @Html.DisplayFor(modelItem => item.DescEstado)
                        </td>
                        <td>
                            @Html.ActionLink("Reagendar", "EditMedico", new { IdCita = item.IdCita}, new{@class="nav-link text-white btn btn-primary", @style="width:120px; display: inline-block; margin-right: 5px;"})
                            @Html.ActionLink("Cancelar", "DeleteMedico", new { IdCita = item.IdCita }, new { @class = "nav-link text-white btn btn-danger", @style = "width:100px; display: inline-block; margin-right: 5px;" })
                            @Html.ActionLink("Receta", "Create", "Receta", new { IdCita = item.IdCita }, new { @class = "nav-link text-black btn btn-outline-success", @style = "width:100px; display: inline-block;" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">Sin Citas</h5>
                    <p class="card-text">No hay citas programadas por el momento.</p>
                    <i class="fa-solid fa-circle-exclamation fa-2xl" style="color: #712cf9;"></i>
                </div>
            </div>
        </div>
    }
</div>

        </div> @*Fin Col de _MenuMedicos.cshtml*@
    </div> @* Fin Row de _MenuMedicos.cshtml*@
</div> @*Fin Container de _MenuMedicos.cshtml*@
