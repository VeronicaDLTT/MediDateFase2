@model MediDate.Models.Usuario

@{
    ViewData["Title"] = "RestablecerContraseña";
}

<div class="container">

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <h4>Restablecer Contraseña</h4>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4 align-self-center">

            <hr />

            <div><label></label></div>

            <p>Se enviara un correo para restablecer su contraseña.</p>

            <form asp-action="Restablecer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Correo: </label>
                    <input name="Email" class="form-control" required />
                </div>
                <div><label></label></div>

                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" style="width:100%" />
                </div>
            </form>

        </div>
    </div>

    <div><label></label></div>

    <div class="row justify-content-center">
        <div class="col-md-auto align-self-center">
            <div>
                <a asp-controller="Usuario" asp-action="Login" class="text-center link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Regresar</a>
            </div>

        </div>
    </div>
</div>

